@{
    Layout = "_LayoutBase.cshtml";
}

@section Styles {
    @RenderSection("Styles", false)
}

@section Scripts {
    @RenderSection("Scripts", false)
}

<style>
    .content-wrapper {
        padding: 50px 0;
    }
    .account-form {
        max-width: 40em;
    }
</style>

<section class="content-wrapper flex-grow-1 d-flex align-items-center justify-content-center">
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row justify-content-center mb-2">
                <div class="col text-center">
                    <a asp-page="/Index">
                        <img src="~/img/btcpay-logo.svg" alt="BTCPay Server" class="mb-4" height="70" asp-append-version="true"/>
                    </a>
                    <h1 class="h2 mb-3">@Model.AppName</h1>
                </div>
            </div>
            <div class="row justify-content-center mb-5">
                <div class="col account-form">
                    <div class="modal-content border-0 p-3">
                        <div class="modal-header justify-content-center border-0 pb-0">
                            <h2 class="modal-title">@ViewData["Title"]</h2>
                        </div>
                        <div class="modal-body">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</section>
